package deep1;

import java.util.Scanner;

public class Ex3 {

	public static void main(String[] args) {

		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();
		int a = 2*n-1;
		
		for(int i=0; i<(); i++) {
			int space = i;
			int star = i;
			if(i>=5) {
				space = 8-i;
				star = 8-i;
			}
			
			for(int j=0; j<4-space; j++) {
				System.out.print(" ");
			}
			for(int j=0; j<(2*star +1); j++) {
				System.out.print("*");
			}
			for(int j=0; j<4-space; j++) {
				System.out.print(" ");
			}
			System.out.println();
		}
	}

}
