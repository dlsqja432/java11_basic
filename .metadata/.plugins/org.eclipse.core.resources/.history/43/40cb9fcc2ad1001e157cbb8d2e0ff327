package org.kh.app2;
// 반복문 : for, while, do~while~
public class Loop1 {

	public static void main(String[] args) {

		int n = 0;
		
		// 조건식이 참 일 때 동안만 반복수행한다.
		// for(초기식; 조건식; 증감식) { 반복해야할 문장 }
		for(int i=0; i<100; i++) {
			n += 1;
		}
		
		System.out.println("n = " + n);
		
		// 배열
		int[] nums = {80, 95, 75, 60, 100, 65, 70, 90, 85, 95};
		String[] names = {"김", "이", "박", "최", "정", "오", "배", "강", "장", "계"};
		int total = 0;
		
		for(int i=0; i<10; i++) {
			total += nums[i];
			System.out.print("이름 : " + names[i] + "\t");
			System.out.print("점수 : " + nums[i] + "\t");
			if(nums[i] >= 90) {
				System.out.println("학점 : A");
			}
			else if(nums[i] >= 80) {
				System.out.println("학점 : B");
			}
			else if(nums[i] >= 70) {
				System.out.println("학점 : C");
			}
			else if(nums[i] >= 60) {
				System.out.println("학점 : D");
			}
			else {
				System.out.println("학점 : F");
			}
		}
		
		double avg = total/10.0;
		System.out.println("전체 총점 : " + total);
		System.out.println("전체 평균 " + avg);
	}

}
