package string;

import java.util.Scanner;

public class Ex3 {

	public static void main(String[] args) {

		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();
		String s;
		
		for(int i=0; i<n; i++) {
			s = scan.next();
			System.out.print(s.charAt(0));
			System.out.print(s.charAt(s.length()-1));
		}
	}

}
