package org.kh.app2;

public class StarPrint {

	public static void main(String[] args) {

		// 1번
		for(int i=0; i<4; i++) {
			for(int j=0; j<6; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		System.out.println();
		
		// 2번
		for(int i=0; i<6; i++) {
			for(int j=0; j<i+1; j++) {
				System.out.print('*');
			}
			System.out.println();
		}
		System.out.println();
		
		// 3번
		for(int i=0; i<6; i++) {
			for(int j=0; j<6-i; j++) {
				System.out.print('*');
			}
			System.out.println();
		}
		System.out.println();
		
		// 4번
		for(int i=0; i<6; i++) {
			for(int j=0; j<6; j++) {
				if(j<i) {
					System.out.print(" ");
				}
				else {
					System.out.print("*");
				}
			}
			System.out.println();
		}
	}

}




















