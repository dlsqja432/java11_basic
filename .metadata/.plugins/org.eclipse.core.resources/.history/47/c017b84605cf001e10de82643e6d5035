package org.kh.java;

public class Variable1 {

	public static void main(String[] args) {

//		CPU : 2진수
//		권한, 작업 : 8진수
//		주소 : 16진수
		

//		변수는 기억장치의 이름을 의미한다.
//		* 기본형 변수 > 단일 기억 장치(primitive)
//		byte : 1byte
//		short : 2byte
//		integer : 4byte
//		long : 8byte
//		boolean : 1byte
//		float : 4byte
//		double : 8byte
//		char : 2byte
//		
//		* 참조형 변수 > 복수 기억 장소(reference)
//		list, map, set
		
		
//		* 상수명 입력 방법
//		final static PI = 3.14; > 상수명은 대문자로 사용
		
//		*변수명 입력 방법
//		ive_average_age : snake 방식
//		iveAverageAge : camel 방식
//		자바는 보통 camel 방식을 사용
//		변수 이름은 영문자(대문자, 소문자)나 숫자를 사용할 수 있고, 특수문자는 $와 _만 사용가능
//		변수 이름은 숫자로 시작할 수 없음
//		자바에서 이미 사용중인 예약어는 사용할 수 없음
		
		boolean a = true; // 논리형 (true, false) : 1byte
		//byte b = 255;	  // -128 ~ 127 => 255는 해당 공간보다 큰 숫자이므로 Overflow가 일어남
		//byte b = -129;  // 해당 공간에 저장할 수 있는 수자보다 더 작은 숫자이므로 underflow가 일어남
		byte b = 126; 	  // 1byte = 8bit = 256가지 (-128 ~ 127)
		short c = 32767;  // 2byte = 16bit = 65536(-32768 ~ 32767)
		char d = 'k'; 	  // 2byte
		int e = 234567;	  // 4byte
		float f = 3.14f;  // 4byte
		long g = 23456789;// 8byte 
		double h = 3.14;  // 8byte
		
		System.out.println("boolean : " + a);
	}

}
